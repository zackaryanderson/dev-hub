<div class="comments">
    {{#each this}}
    <div class="card mx-auto" style="margin-bottom:1vh">
        <div class="card-header">
            <a href="/userpage/{{user.id}}">{{user.username}}</a> said, on {{format_date created_at}},
        </div>
        <div class="card-body">
            <div class="card-text">
                {{comment_text}}
            </div>
        </div>
    </div>
    {{/each}}
</div>