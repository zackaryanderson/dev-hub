<div class="card col-8 mb-3 mx-auto">
    <div class="card-body">
        <div class="card-title">
            {{!-- have href link to individual post pages --}}
            <a href="/post/{{id}}">{{title}}</a>
        </div>
        <div class="card-text">
            <p>{{body}}</p>
            <a class="blockquote-footer">by {{user.username}} on
            {{format_date created_at}}</a>
        </div>
        <div class="footer"> 
            <button id="like-button" class="btn btn-light">like</button>
            {{vote_count}} {{format_plural "like" vote_count}}
            |
            <button id="comment-button" class="btn btn-light">comment</button>
            <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</div>