<div class="card col-12 mb-3 mx-auto">
    <div class="card-body" id="{{id}}">
        <div class="card-title">
            {{!-- have href link to individual post pages --}}
            <a href="/post/{{id}}"><h5>{{title}}</h5></a>
        </div>
        <div class="card-text">
            <p style="white-space: pre-line">{{body}}</p>
            <p class="blockquote-footer">by <a href="/userpage/{{user.id}}">{{user.username}}</a> on
            {{format_date created_at}}</p>
        </div>
        <div class="footer"> 
            {{vote_count}} {{format_plural "like" vote_count}}  
            |
            <a href="/post/{{id}}">  {{comments.length}} {{format_plural "comment" comments.length}}</a>
            <div class="col-12"></div>
            <button class="btn upvote-btn"><span class="oi oi-star"></span> Like</button>
            <a id="comment-button" class="btn comment-btn" href="/post/{{id}}"><span class="oi oi-code"></span> Comment</a>
        </div>
    </div>
</div>