                    <button id="new-post-btn" class="btn col-1 mb-2" style="margin-top: 5px; margin-left: 10px">
                        <span class="oi oi-pencil"></span>
                    </button>
                </form>
            </div>
        </div>
        {{#each filteredPosts as |post|}}
        {{> post-info post}}
        {{/each}}
    </div>
</div>
